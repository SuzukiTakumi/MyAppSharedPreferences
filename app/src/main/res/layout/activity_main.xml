<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:padding="40dp"
    android:orientation="vertical"
    android:layout_gravity="center_horizontal"
    tools:context="com.example.admin.myapplicationsharedpreferences.MainActivity">

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/edit_text"
        android:textSize="30sp"
        android:layout_margin="20dp"
        android:textColor="#000000" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/button_write"
        android:text="Write"
        android:layout_gravity="center_horizontal"
        android:onClick="writeText" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/textview_write"
        android:textSize="40sp"
        android:layout_margin="20dp"
        android:textColor="#3353e0" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/button_read"
        android:text="Read"
        android:layout_gravity="center_horizontal"
        android:onClick="readText" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/textview_read"
        android:textSize="40sp"
        android:layout_margin="20dp"
        android:textColor="#fa0418" />
</LinearLayout>
